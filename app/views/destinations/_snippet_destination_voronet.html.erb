		<section class="modalphotos photogrid">
			<h3>Photos</h3>
			<img src="assets/Top Destination/Manastiri pictate/Manastirea_Voronet_1_tn.jpg" alt="">
			<img src="assets/Top Destination/Manastiri pictate/Manastirea_Voronet_2_tn.jpg" alt="">
		</section>

<h3>Comments</h3>
		<section class=<%= $clas %>>
		
			<%= render 'comment'  %>
			<% if current_user %>
			<%= link_to "Comment", comments_path(:clas => $clas,:loc => $loc), :remote => true, 
			 :class => "btn btn-primary button_text" %>
			<% end %>
			
		</section>

	</div>
	</article>