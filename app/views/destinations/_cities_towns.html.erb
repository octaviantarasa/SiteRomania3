<h2> Cities & Towns</h2>

		<section class="topdestinations">
			<div id="destinationindex" class="row">
				<section class="scrollspy clearfix col col-lg-3 hidden-sm">

				<ul class="nav nav-list affix visible-desktop">
						<li><a href="#Bucuresti">Bucuresti</a></li>
						<li><a href="#Brasov">Brasov</a></li>
						<li><a href="#Cluj">Cluj</a></li>
						<li><a href="#Constanta">Constanta</a></li>
						<li><a href="#Iasi">Iasi</a></li>
						<li><a href="#Timisoara">Timisoara</a></li>
					</ul><!-- nav-list -->
				</section><!-- scrollspy -->
				<section class="destinationinfo col col-lg-9">
					<button class="btn btn-primary" id="ascunde_harta">Hide map</button>
					<button class="btn btn-primary" id="arata_harta" style="display:none">Show map</button>
						
					<div style='width: 100%;'>
					  <div id="map" style='width: 100%; height: 400px;'></div>
					</div>

					<%= render "snippet_cities_bucuresti"  %>
					<%= render "snippet_cities_brasov"  %>
					<%= render "snippet_cities_cluj"  %>
					<%= render "snippet_cities_constanta"  %>
					<%= render "snippet_cities_iasi"  %>
					<%= render "snippet_cities_timisoara"  %>

				</section><!-- destinationinfo -->
				<section id="modal" class="modal fade" >
					<div class="modal-body">
						<img id="modalimage" src="" alt="Modal Photo" >
						
					</div><!--modal-body-->
				</section><!--modal fade-->
			</div><!-- destinationindex -->
		</section><!-- topdestinations -->
		
		<script src="assets/myscrypt.js" type="text/javascript"></script>
		 <script type="text/javascript">
				handler = Gmaps.build('Google');
				handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
					markers = handler.addMarkers(<%=raw @hash.to_json %>);
				  handler.bounds.extendWith(markers);
				  handler.fitMapToBounds();
				});
									
		 </script>
