

				<%= form_for @comment,  :remote => true do |f| %>
					    <% @comment.errors.full_messages.each do |msg| %>
      					<p><%= msg %></p>
   						 <% end %>
				 	<%= f.hidden_field :user_id, :value => current_user.id  %>
				 	<%= f.hidden_field :location_id, :value => @loc  %>
				  <div class="field">
				    <%= f.label :com_text %><br>
				    <%= f.text_field :com_text %>
				  </div>
				  
				  <div class="actions">
				    <button class="btn btn-primary " name="commit" type="submit" value="Create Comment">Create Comment</button>
				  </div>
				<% end %>
