		</section>

		<% $loc = $sea_loc  %>
		<% if $location.empty? %>
			<% @loc_hash = @sea %>
			
		<% else %>
			<% @loc_hash = $location %>
		<% end %>
		<% $clas = "comment_"+$loc.to_s %>
		<section class=<%= $clas %>>
				
			<%= render 'comment'  %>
			<% if current_user %>
			<%= link_to "Comment", comments_path(:clas => $clas,:loc => $loc), :remote => true %>
			<% end %>

	</div><!-- media-body -->
</article>